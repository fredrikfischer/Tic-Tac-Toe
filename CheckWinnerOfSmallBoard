using System;
using System.Collections.Generic;
using System.Text;

namespace Super_Tic_Tac_Toe_New
{
    class CheckWInnerOfSmallBoard
    {
        DeclareWinnerClass DeclareWinnerClass = new DeclareWinnerClass();
        
        public void MainsmallBoardCheckIfWinner(string whichSmallBoard, string[] smallBoardstringArr)
        {
            smallBoardCheckIfWinnerHorisontal(whichSmallBoard, smallBoardstringArr);
            smallBoardCheckIfWinnerVertical(whichSmallBoard, smallBoardstringArr);
            smallBoardCheckIfWinnerCross(whichSmallBoard, smallBoardstringArr);
        }
        public void smallBoardCheckIfWinnerHorisontal(string whichSmallBoard, string[] smallBoardstringArr)
        {
            
            for (int i = 0; i < 7; i += 3)
            {
                
                if (smallBoardstringArr[i] == smallBoardstringArr[i + 1] && smallBoardstringArr[i + 1] == smallBoardstringArr[i + 2] && !string.IsNullOrEmpty(smallBoardstringArr[i]))
                {
                    
                    DeclareWinnerClass.MainCheckWinner(whichSmallBoard + smallBoardstringArr[i]);
                }
            }
        }
        public void smallBoardCheckIfWinnerVertical(string whichSmallBoard, string[] smallBoardstringArr)
        {
            
            for (int i = 0; i < 3; i++)
            {
                
                if (smallBoardstringArr[i] == smallBoardstringArr[i + 3] && smallBoardstringArr[i + 3] == smallBoardstringArr[i + 6] && !string.IsNullOrEmpty(smallBoardstringArr[i]))
                {
                    
                    DeclareWinnerClass.MainCheckWinner(whichSmallBoard + smallBoardstringArr[i]);
                }
            }
        }
        public void smallBoardCheckIfWinnerCross(string whichSmallBoard, string[] smallBoardstringArr)
        {
            int j = 8;
            for (int i = 0; i < 3; i += 2)
            {
                if (smallBoardstringArr[i] == smallBoardstringArr[4] && smallBoardstringArr[4] == smallBoardstringArr[j] && !string.IsNullOrEmpty(smallBoardstringArr[i]))
                {
                    
                    DeclareWinnerClass.MainCheckWinner(whichSmallBoard + smallBoardstringArr[i]);
                }
                j -= 2;
            }
        }
    }
}
